{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "./dist"
  ]
}